# Stage 3: A2A Protocol Configuration

# LLM Configuration
LLM_MODEL=claude-3-7-sonnet-20250219
ANTHROPIC_API_KEY=your-anthropic-api-key-here
# Alternative: Use OpenAI
# OPENAI_API_KEY=your-openai-api-key-here

# A2A Server Configuration
A2A_HOST=0.0.0.0

# Agent Ports
PRODUCT_AGENT_PORT=8001
INVENTORY_AGENT_PORT=8002
SALES_AGENT_PORT=8003

# Agent Names (optional)
PRODUCT_AGENT_NAME=ProductCatalogAssistant
INVENTORY_AGENT_NAME=InventoryManager
SALES_AGENT_NAME=SalesAnalytics

# MCP Server Paths (relative from project root)
PRODUCT_MCP_PATH=stage1_mcp_product_server/server_fastmcp.py
INVENTORY_MCP_PATH=stage3_multi_agent/inventory_mcp/server.py
SALES_MCP_PATH=stage3_multi_agent/sales_mcp/server.py

# Cross-Domain Access (optional)
# Enable inventory agent to access sales data
INVENTORY_CROSS_DOMAIN=true
# Enable sales agent to access inventory data
SALES_CROSS_DOMAIN=true

# Logging
LOG_LEVEL=INFO

# A2A Protocol Version
A2A_PROTOCOL_VERSION=1.0

# Discovery Method
# Options: local, registry (registry will be implemented in Stage 4)
DISCOVERY_METHOD=local