# Telemetry Configuration for Enhanced A2A Agents
# Copy this file to .env and modify as needed

# =============================================================================
# PHOENIX CONFIGURATION
# =============================================================================

# Phoenix Project Settings
PHOENIX_PROJECT_NAME=a2a-multi-agent
PHOENIX_COLLECTOR_ENDPOINT=http://phoenix:4317

# Telemetry Enable/Disable
ENABLE_TELEMETRY=true

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent Host Settings
A2A_HOST=0.0.0.0
DISCOVERY_METHOD=docker

# Product Agent Configuration
PRODUCT_AGENT_PORT=8001
PRODUCT_AGENT_NAME=Product Catalog Agent

# Inventory Agent Configuration
INVENTORY_AGENT_PORT=8002
INVENTORY_AGENT_NAME=Inventory Management Agent

# Sales Agent Configuration
SALES_AGENT_PORT=8003
SALES_AGENT_NAME=Sales Analytics Agent

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# MCP Product Server (Required for Product Agent)
MCP_PRODUCT_SERVER_PATH=/home/lewis/work/AOA/stage1_mcp_product_server/server_fastmcp.py

# =============================================================================
# LLM CONFIGURATION
# =============================================================================

# LLM Provider (openai, anthropic, local)
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================

# Performance Monitoring Interval (seconds)
PERFORMANCE_MONITORING_INTERVAL=30

# Enable System Metrics Collection
ENABLE_SYSTEM_METRICS=true

# =============================================================================
# BUSINESS METRICS CONFIGURATION
# =============================================================================

# Product Search Metrics
PRODUCT_SEARCH_TIMEOUT=30
PRODUCT_SEARCH_MAX_RESULTS=50

# Inventory Metrics
INVENTORY_CHECK_TIMEOUT=15
INVENTORY_ALERT_THRESHOLD=10

# Sales Metrics
SALES_ANALYSIS_TIMEOUT=45
SALES_FORECAST_HORIZON=3_months

# =============================================================================
# ERROR HANDLING
# =============================================================================

# Error Reporting
ENABLE_ERROR_REPORTING=true
ERROR_REPORTING_LEVEL=WARNING

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5

# =============================================================================
# DOCKER SPECIFIC CONFIGURATION
# =============================================================================

# Docker Network
DOCKER_NETWORK=aoa-network

# Container Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# PHOENIX UI CONFIGURATION
# =============================================================================

# Phoenix UI Access
PHOENIX_UI_PORT=6006
PHOENIX_UI_HOST=localhost

# Phoenix Data Persistence
PHOENIX_DATA_VOLUME=phoenix_data
PHOENIX_LOGS_VOLUME=phoenix_logs

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
DEV_MODE=false
DEBUG_TELEMETRY=false

# Local Development Overrides
# Uncomment these for local development without Docker
# PHOENIX_COLLECTOR_ENDPOINT=http://localhost:4317
# A2A_HOST=localhost
# DISCOVERY_METHOD=local 